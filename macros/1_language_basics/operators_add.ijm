// initialise program
// operator '=' is used to assign values to variables
n1 = 3;
n2 = 2.5;
n3 = 4;

// operator '+' can add values stored into variables
sum = n1 + n2 + n3;

// compute mean of the 3 numbers
mean = sum / 3; 

// show the results
print("Sum =")
print(sum);
print("Mean =")
print(mean)


// operator '+' can directly add values as well
sum_new = 4 + 5;

// show the results
print("New sum =");
print(sum_new);

